<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/workoutCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/element_spacing"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/workout_title"
                style="@style/TextAppearance.StayFitTrainer.bodyMedium"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:layout_height="match_parent"
                tools:text="Warm Up"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/element_spacing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/time_title_text"
                style="@style/TextAppearance.StayFitTrainer.bodySmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="20"
                android:layout_marginStart="@dimen/line_spacing"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/element_spacing"
                app:layout_constraintStart_toStartOf="@id/workout_title"
                app:layout_constraintTop_toBottomOf="@id/workout_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/unit"
                style="@style/TextAppearance.StayFitTrainer.bodySmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/unit_time"
                android:layout_marginStart="@dimen/line_spacing"
                android:textColor="@color/greyColorDark"
                app:layout_constraintStart_toEndOf="@id/time_title_text"
                app:layout_constraintTop_toTopOf="@+id/time_title_text" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/difficulty"
                style="@style/TextAppearance.StayFitTrainer.bodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/greyColorDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/workout_title"
                app:layout_constraintTop_toTopOf="@+id/time_title_text"
                tools:text="Mediume" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/calorie_text"
                style="@style/TextAppearance.StayFitTrainer.bodySmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/calorie_unit"
                app:layout_constraintEnd_toStartOf="@+id/calorie_unit"
                app:layout_constraintTop_toTopOf="@+id/calorie_unit"
                tools:text="20" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/calorie_unit"
                style="@style/TextAppearance.StayFitTrainer.bodySmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/unit_kcal"
                android:layout_marginStart="@dimen/line_spacing"
                android:textColor="@color/greyColorDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/time_title_text" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>




</layout>

